# Option 2: Redis Labs or other provider
# REDIS_URL="redis://:[PASSWORD]@[HOST]:[PORT]"

# Background Jobs Configuration
# For serverless, we'll use database-based jobs instead of Bull/Redis queues
JOB_POLLING_INTERVAL="5000"  # 5 seconds
MAX_CONCURRENT_JOBS="3"

# Scraping Configuration (optimized for serverless)
SCRAPE_DELAY_MIN=1000
SCRAPE_DELAY_MAX=3000
MAX_CONCURRENT_BROWSERS=2    # Reduced for serverless
MAX_CONCURRENT_SCRAPERS=2    # Reduced for serverless
REQUEST_TIMEOUT=60000        # 1 minute max for serverless functions
SCRAPER_TIMEOUT=120000       # 2 minutes max for serverless functions
DEFAULT_PAGE_LIMIT=1000      # Reasonable limit for serverless

# Proxy Configuration (optional)
PROXY_ENABLED=false
PROXY_SERVERS=""

# Export Configuration
# Files will be stored temporarily and returned as responses
